---
const { data } = Astro.props;
---

<article>
  <a href={`/single-recipe/${data.id}`}>

  <div class="øverst">
    <div>
      <h2>{data.name}</h2>
      <h3>Time: {data.time} min.</h3>
      <h3>Servings: {data.servings} Portions</h3>
    </div>

    <div>
      <img src={data.main_image} alt={data.name} />
    </div>
  </div>

  <div class="nederst">
    <div>
      <h3>Seasons: <br /> {data.season}</h3>
    </div>

    <div>
      <p>{data.description}</p>
    </div>
  </div>
  </a>
</article>

<style>
  .øverst,
  .nederst {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
  }

  .nederst {
    align-items: flex-end;
  }
  p {
    width: 300px;
  }  
  
  img {
    width: 300px;
    height: 250px;
    object-fit: cover;
    /* display: block; */
  }
</style>
