---
const {style, link = "#contact-form"} = Astro.props;
---

<a href={link} style={style} class="contact-button">CONTACT</a>

<style>
  .contact-button {
    position: absolute;
    display: inline-block;
    padding: 0.75rem 1.25rem;
    background: #F9F2E0;
    color:#012FA8;
    font-size: 17.5px;
    letter-spacing: 0.5px;
    border-radius: 3rem;
    border: none;
    text-decoration: none;
    list-style: none;
    font-weight: bold;
    font-family: "Jost", sans-serif;
    font-weight: 600;
    cursor: pointer;
 }

  @media (min-width: 768px) {
  .contact-button {
    margin: 30px auto;
font-weight: 600;
transition: 0.3s ease-in-out, color 0.4s ease-in-out;
  }

  .contact-button:hover{
    background: var(--color-salmonpink);
    color: var(--color-primary);
  }

  }
</style>


