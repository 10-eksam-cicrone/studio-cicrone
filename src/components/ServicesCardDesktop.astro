---
// Props
const { title, imageSrc, text, id, class: customClass = "" } = Astro.props;
import ContactButton from './ContactButton.astro';
---

<article id={id} class={`card ${customClass}`}>
  <div class="card-content">
    <div class="image-box">
      <img src={imageSrc} alt={title} class="card-image" />
    </div>
    <div class="card-layout-desktop">
      <h2 class="card-title">{title}</h2>
      <p class="card-text">{text}</p>
      <div class="contact-button-wrapper">
        <ContactButton />
      </div>
    </div>
  </div>
</article>

<style>
    @media (max-width: 1000px) {
  .card {
    display: none;
  }
}

@media (min-width: 1000px) {
  .card {
    font-family: sans-serif;
    max-width: 1200px;
    margin: 0 auto;
  }

  .card-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 125px;
    margin: 175px 50px;
  }

  .card.reverse .image-box {
    order: 2;
  }

  .card.reverse .text-box {
    order: 1;
  }

  .card-image {
    height: 100%;
    width: 500px;
    margin: 0 auto;
    object-fit: cover;
  }

  .card-layout-desktop {
margin: auto 0;
    max-width: 500px;
    padding-top: 70px;
  }

  .card-text {
    font-size: 22px;
    font-weight: 100;
    line-height: 35px;
    padding-top: 20px;
    max-width: 450px;
  }

  .card-title {
    font-weight: 200;
    color: #012FA8;

  }

  .contact-button-wrapper {
  display: flex;
  justify-content: center;
}

}
</style>
