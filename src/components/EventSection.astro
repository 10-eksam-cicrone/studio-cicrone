---
// Props
const { serviceType, image, date, class: customClass = ""  } = Astro.props;
---

<article class={`card ${customClass}`}>
    
    <h2>{serviceType}</h2>
    
    <div class="content-wrapper">

          <div class="left-text">
            <slot name="left" />
          </div>
      
      <div class="image-container">
        <img src={image} alt={serviceType} />
      </div>

      <div class="right-text">
        <slot name="right" />
      </div>

    </div>
    
    <p>{date}</p>
  
</article>
  

<style>

    article{
        margin: 45px auto 75px auto;
    }

h2{
    font-size: 22px;
    color: #012FA8;
    padding-bottom: 25px;
    text-align: center;
    margin: 0 auto;
}

.content-wrapper{
    display: grid;
    grid-template-columns: 1fr 1fr;
    font-size: 10px;
    align-items: center;
}

.image-container{
    height: 100%;
    width: auto;
    padding: 10px 0px 30px 50px;
    order: -1;
}

.card.reverse .image-container {
    order: 2;
    padding: 10px 50px 30px 0px;
  }

  .card.reverse .right-text {
    order: 1;
  }

.image-container img{
    height: 100%;
    width: 100%;
    object-fit: cover;
}

.left-text, .right-text{
  max-width: 32.1vw;
    margin: 0 auto;
    font-size: 2.25vw;
}

.right-text{
    order: -1;
}

.left-text{
   display: none;
}

p{
    text-align: center;
    margin: 0 auto;
}

@media (min-width: 800px) {

  article{
    margin-bottom: 150px;
  }

    .content-wrapper{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    font-size: 10px;
    align-items: center;
}

h2{
  font-size: 2vw;
}

.left-text{
   display: block;
   font-size: 1.5vw;
   max-width: 23vw;
   text-align: center;
}

.image-container{
    order: 1;
    padding: 20px 0px 10px 0px;
}

.right-text{
    order: 2;
    font-size: 1.5vw;
    max-width: 23vw;
}

.card.reverse .image-container {
    order: 1;
    padding: 20px 0px 10px 0px;
  }

  .card.reverse .right-text {
    order: 2;
  }

}

</style>