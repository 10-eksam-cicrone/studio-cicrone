---
import FilterButton from './FilterButton.astro';
---
<div class="filter">
<h3>Filter seasons</h3>

<div class="filter-wrapper uppercase">
  <FilterButton label="ALL" filter="all" />
  <FilterButton label="SPRING" filter="spring" />
  <FilterButton label="SUMMER" filter="summer" />
  <FilterButton label="AUTUMN" filter="autumn" />
  <FilterButton label="WINTER" filter="winter" />
</div>
</div>

<style>
.filter {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rem;
}

h3 {
  font-size: 1.8rem;
  color: var(--color-secondary);
  font-weight: 400;
}
  .filter-wrapper {
    display: flex;
    gap: 1rem;
    margin: 2rem 0;
    justify-content: center;
  }

