---
// Props
const { title, imageSrc, text, id} = Astro.props;
import ContactButton from './ContactButton.astro';
---

<article id={id} class="card">

  <div class="card-content">
    <h2 class="card-title">{title}</h2>
    <div class="imagewrapper">
    <img src={imageSrc} alt={title} class="card-image"/>
    <ContactButton  style="position: absolute; top: 80%;left: 50%;transform: translate(-50%, -50%);-ms-transform: translate(-50%, -50%);"></ContactButton></div>
    <p class="card-text">{text}</p>
  </div>

</article>

<style>
  .card {
    margin: 0 auto;
    border-radius: 1rem;
    overflow: hidden;
    max-width: 400px;
    font-family: sans-serif;
    margin-bottom: 100px;
  }

.imagewrapper {
  position: relative;
  width: 100%;
  height: auto;
}

.imagewrapper img{
  height: 100%;
  width: 100%;
}

  .card-content {
    padding: 1rem;
  }

  .card-title {
    text-align: center;
    font-size: 2rem;
    font-weight: 200;
    color: #012FA8;
    margin: 0 0 0.5rem;
    padding-bottom: 30px;
  }

  .card-text {
    padding-top: 30px;
    font-size: 1rem;
    line-height: 33px;
    font-weight: 300;
    color:#012FA8;
  }

  @media (min-width: 1000px) {
    .card{
        display: none;
    }
  }


</style>
